{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ryokan-tensei",
  "version": "0.1.0",
  "identifier": "com.ryokan-tensei.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "전생여관",
        "width": 384,
        "height": 792,
        "minWidth": 384,
        "minHeight": 792,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
